<main id="main" class="main">

    <div class="pagetitle">
        <h1>Add QuestionLevel</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="QuestionLevel" asp-action="AddQuestionLevel">QuestionLevel</a></li>
                <li class="breadcrumb-item active"><a asp-controller="QuestionLevel" asp-action="QuestionLevelList">QuestionLevel List</a></li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Add User</title>
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    </head>
    <section class="section ">
        <div class="row ">
            <div class="col-lg-6">

                <div class="card">
                    <div class="card-body shadow-lg">
                        <h5 class="card-title">user form</h5>

                        <div class="card">
                            <div class="card-body shadow-lg">
                                <h5 class="card-title">create user</h5>

                                <!-- No Labels Form -->

                                <h2 class="text-2xl font-bold text-gray-700 mb-6">Add User</h2>
                                <form class="space-y-6">
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <!-- Name and Password Fields -->
                                        <div>
                                            <label for="name" class="block text-sm font-medium text-gray-700">QuetionLevel ID</label>
                                            <input type="text" id="name" name="name" placeholder="Enter Question ID" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-xl shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                                        </div>
                                        <div>
                                            <label for="name" class="block text-sm font-medium text-gray-700">User ID</label>
                                            <input type="text" id="name" name="name" placeholder="Enter User ID" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-xl shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                                        </div>

                                    </div>

                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <div class="dropdown">
                                            <label for="questionLevel" class="block text-sm font-medium text-gray-700">Select QuestionLevel Level</label>
                                            <select id="questionLevel" name="questionLevel" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-xl shadow-sm focus:ring-blue-500 focus:border-blue-500">
                                                <option value="1">Easy</option>
                                                <option value="2">Medium</option>
                                                <option value="3">Hard</option>
                                                <option value="4">Expert</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <!-- Name and Password Fields -->
                                        <div>
                                            <label for="name" class="block text-sm font-medium text-gray-700">Created</label>
                                            <input type="date" id="name" name="name" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-xl shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                                        </div>
                                        <div>
                                            <label for="name" class="block text-sm font-medium text-gray-700">Modified</label>
                                            <input type="date" id="name" name="name" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-xl shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                                        </div>

                                    </div>

                                    <!-- Submit and Reset Buttons -->
                                    <div class="flex space-x-4">
                                        <button type="submit" class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-xl shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Submit</button>
                                        <button type="reset" class="px-6 py-3 bg-gray-400 text-white font-semibold rounded-xl shadow-sm hover:bg-gray-500 focus:outline-none focus:ring-2 focus:ring-gray-300">Reset</button>
                                    </div>
                                </form><!-- End No Labels Form -->
                            </div>
                        </div>
                    </div>
                </div>
    </section>                                                      
</html>


</main><!-- End #main -->